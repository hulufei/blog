---
layout: layouts/base.njk
---

<style>
article > :last-child:after {
  content: '...'
}
</style>

<h1>Huiliu</h1>

{% for post in search.pages("type=post") %}
<article>
  <header>
    <p>
      <a href="{{ post.url }}">
        {{ post.date | date('yyyy-MM-dd') }}
      </a>
    </p>
    {% if post.title %}
      <h1>
        <a href="{{ post.url }}">
          {{ post.title }}
        </a>
      </h1>
    {% endif %}
  </header>
  {{ post.excerpt | md | safe }}
</article>
{% endfor %}
